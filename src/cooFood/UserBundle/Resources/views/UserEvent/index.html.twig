{% extends '::base.html.twig' %}

{% block body -%}
    <h1>UserEvent list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Iduser</th>
                <th>Idevent</th>
                <th>Paid</th>
                <th>Accepteduser</th>
                <th>Acceptedhost</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('userevent_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.idUser }}</td>
                <td>{{ entity.idEvent }}</td>
                <td>{{ entity.paid }}</td>
                <td>{{ entity.acceptedUser }}</td>
                <td>{{ entity.acceptedHost }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('userevent_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('userevent_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('userevent_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
