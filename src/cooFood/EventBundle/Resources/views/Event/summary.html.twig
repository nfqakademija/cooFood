    {% if allOrders != null %}
        <table class="table table-hover">
            <tr>
                <th>Produktas</th>
                <th>Kiekis</th>
                <th>Kaina (eur)</th>
            </tr>
        {% for order in  allOrders  %}
            {% if loop.last == false %}
                    <tr>
                        <td>{{ order.idProduct.name }}</td>
