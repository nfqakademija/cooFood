{% extends '::base.html.twig' %}

{% block body -%}
<h1>Event</h1>

<h1>{{ entity.name }}</h1>

<div class="row">
    <div class="col-md-6">

        <table class="record_properties">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Eventdate</th>
                <td>{{ entity.eventDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Orderdeadlinedate</th>
                <td>{{ entity.orderDeadlineDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Idsupplier</th>
                <td>{{ entity.idSupplier }}</td>
            </tr>
            <tr>
                <th>Iduser</th>
                <td>{{ entity.idUser }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ entity.visible }}</td>
            </tr>
            <tr>
                <th>Reqapprove</th>
                <td>{{ entity.reqApprove }}</td>
            </tr>
            </tbody>
        </table>

        {% if organizer %}
            <button type="button" class="btn btn-primary" onClick="location.href='{{ path('event_edit', { 'id': entity.id }) }}'">Redaguoti</button>
        {% endif %}
    </div>
    <div class="col-md-6">
        Kviesti sveƒçius:<br/>
        <select size="10" multiple>
            {% for user in allUsers %}
                <option value="{{ user.id }}">{{ user.name }} {{ user.surname }} {{ user.email }}</option>
            {% endfor %}
        </select>
    </div>
</div>

{% endblock %}
