{% trans_default_domain 'FOSUserBundle' %}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        {% if form_errors(form.email) or form_errors(form.name) or form_errors(form.surname) %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form.email) }}
                {{ form_errors(form.name) }}
                {{ form_errors(form.surname) }}
                {# {{ form_errors(form.current_password) }} #}
            </div>
        {% endif %}

        <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
            <legend>{% trans %}Redaguoti informaciją{% endtrans %}</legend>
            {{ form_start(form, {'attr': {'class': 'fos_user_profile_edit', 'id': 'profile-form'} }) }}
                <div class="form-group">
                    <label for="email">{{ form_label(form.email) }}</label>
                    <div class="input-group">
                        <span class="input-group-addon">@</span>
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>

                <div class="form-group">
                    <label for="name">{{ form_label(form.name) }}</label>
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <div class="form-group">
                    <label for="surname">{{ form_label(form.surname) }}</label>
                    {{ form_widget(form.surname, { 'attr': {'class': 'form-control'} }) }}
                </div>

                <button type="submit" class="btn btn-success">{{ 'profile.edit.submit'|trans }}</button>
                <a type="button" class="btn btn-danger pull-right" href="/profile">{% trans %}Atšaukti{% endtrans %}</a>
            {{ form_rest(form) }}
            {{ form_end(form, {'attr': {'class': 'fos_user_profile_edit', 'id': 'profile-form'} }) }}
        </form>
    </div>
</div>