{% extends "base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

{% if error %}
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
    </div>
{% endif %}

    <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <fieldset>
            <legend>Prisijungimas</legend>
            <div class="form-group">
                <label for="username" class="col-lg-2 control-label">{{ 'security.login.username'|trans }}</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-lg-2 control-label">{{ 'security.login.password'|trans }}</label>
                <div class="col-lg-10">
                    <input type="password" class="form-control" id="password" name="_password" required="required" >
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans }}
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="reset" class="btn btn-default">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">{{ 'security.login.submit'|trans }}</button>
                </div>
            </div>
        </fieldset>
    </form>
{% endblock fos_user_content %}
