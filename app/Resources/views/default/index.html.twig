{% extends 'base.html.twig' %}

{% block body %}
    <ul class="nav nav-tabs">
        <li class="active"><a href="#publicEvents" data-toggle="tab">Vieši renginiai</a></li>
        <li><a href="#myEvents" data-toggle="tab">Mano renginiai</a></li>
    </ul>
    <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="publicEvents">
            {% if events %}
            {% for event in events %}
                <li><a href="event/{{ event.id }}">{{ event.name }}</a></li>
            {% endfor %}
            {% else %}
                <p>Viešų renginių nėra.</p>
            {% endif %}
        </div>
        <div class="tab-pane fade" id="myEvents">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {% if my_events %}
                {% for event in my_events %}
                    <li><a href="event/{{ event.id }}">{{ event.name }}</a></li>
                {% endfor %}
                {% else %}
                    <p>Nedalyvaujate jokiuose renginiuose.</p>
                {% endif %}
            {% else %}
                <p>Prašome prisijungti.</p>
            {% endif %}
        </div>
    </div>

{% endblock %}

